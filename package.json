{
  "name": "@victor-software-studio/node-security-checker",
  "version": "1.0.0",
  "description": "TypeScript-based Node.js security vulnerability checker with Zod validation and local caching",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "node-security-checker": "./dist/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "check": "node --import tsx ./index.ts",
    "lint": "eslint .",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "node",
    "security",
    "vulnerability",
    "cve",
    "checker",
    "typescript"
  ],
  "author": "Victor AraÃºjo",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/victor-software-studio/node-security-checker.git"
  },
  "bugs": {
    "url": "https://github.com/victor-software-studio/node-security-checker/issues"
  },
  "homepage": "https://github.com/victor-software-studio/node-security-checker#readme",
  "dependencies": {
    "semver": "^7.7.3",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/semver": "^7.5.8",
    "tsx": "^4.20.6",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
